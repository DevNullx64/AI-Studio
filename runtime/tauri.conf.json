{
  "build": {
    "devPath": "http://localhost:5000",
    "distDir": "ui/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "MindWork AI Studio",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "all": false,
        "open": true,
        "scope": [
          {
            "name": "../app/MindWork AI Studio/bin/dist/mindworkAIStudio",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "path": {
        "all": true
      },
      "http" : {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost"
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MindWork AI Studio",
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": null,
      "dangerousUseHttpScheme": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.tsommer.mindwork-ai-studio",
      "externalBin": [
        "../app/MindWork AI Studio/bin/dist/mindworkAIStudio"
      ],
      "macOS": {
        "exceptionDomain": "localhost"
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": false
    }
  }
}
